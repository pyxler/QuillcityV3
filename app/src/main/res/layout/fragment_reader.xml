<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/ui_margin"
    tools:context="Fragment.Reader">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/reader_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:textColor="@color/author_color"/>

    <TextView
        android:id="@+id/reader_poem"
        android:layout_below="@id/reader_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large"/>

    <ImageButton
        android:id="@+id/reader_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reader_poem"
        android:src="@drawable/ic_action_good"/>

    <ImageButton
        android:id="@+id/reader_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/reader_positive"
        android:layout_below="@id/reader_poem"
        android:src="@drawable/ic_action_bad"/>

</RelativeLayout>
